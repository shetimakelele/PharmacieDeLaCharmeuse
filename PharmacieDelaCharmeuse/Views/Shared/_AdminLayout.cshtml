
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmacieDelaCharmeuse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/7ed738bc81.js" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</head>
    <body>
        <div id="wrapper" class="wrapper-content">
            <div id="sidebar-wrapper">
                <ul class="sidebar-nav">
                    <li class="sidebar-brand">
                        <a href="#">Adminsistration</a>

                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Site</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Image" asp-action="Upload">Uploader</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Information" asp-action="CreerInformation">Information</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Astuce" asp-action="CreerAstuce">Nouvelle Astuce</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Astuce" asp-action="CreerAstuce">Nouveau  Produit</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="TestProduit" asp-action="CreerTestProduit">Nouveau Test</a>
                    </li>

                </ul>
            </div>

            <div id="page-content-wrapper">
                <nav class="navbar navbar-dark bg-dark ">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button class="btn-menu btn btn-success btn-toggle-menu" type="button">
                                <i class="fa fa-bars"></i>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse">
                            <h3 class="text-center">Administration</h3>
                            <ul class="nav navbar-nav navbar-right">

                                <li>
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <i class="ti-panel"></i>
                                        <p>Stats</p>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="ti-settings"></i>
                                        <p>Réglages</p>
                                    </a>
                                </li>
                            </ul>

                        </div>
                    </div>
                </nav>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            

                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
