@model PharmacieDeLaCharmeuse.Core.Data.Models.Astuce

<section id=" nosAstuces">

    <div class="divider"></div>
    <div class="container heading">
        <h3 class="mb-0">@Model.Titre</h3>
    </div>
    <div class="container">
        <div class="row">

            <div class="col-md-6">
                <img src="@Model.AstuceImageUrl" alt="" class="img-thumbnail" />
            </div>
            <div class="col-md-6">
                <h3 class="my-3"> Description</h3>
                <p>@Model.Description.</p>
                <hr />
                <h4 class="text-left">date</h4>
                <br />
                <a asp-controller="Astuce" asp-action="ListAstuce" class="btn btn-outline-success">Retour à la liste</a>

            </div>

        </div>
    </div>

</section>
